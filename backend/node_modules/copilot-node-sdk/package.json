{
  "name": "copilot-node-sdk",
  "version": "3.16.0",
  "description": "The Copilot.com Node.JS SDK",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/api/init.d.ts",
      "default": "./dist/api/init.js"
    }
  },
  "scripts": {
    "build": "yarn format && yarn generate-api && tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit -p tsconfig.check.json",
    "test": "COPILOT_ENV=local node --experimental-specifier-resolution=node --loader ts-node/esm test/index.ts",
    "test:fail": "node --experimental-specifier-resolution=node --loader node --loader ts-node/esm test/index.ts",
    "test:staging": "COPILOT_ENV=__SECRET_STAGING__ node --experimental-specifier-resolution=node --loader ts-node/esm test/index.ts",
    "generate-api": "rm -rf codegen && mkdir codegen && node --import=module ./scripts/generate-spec.js && openapi --input ./codegen/spec.json --output ./codegen/api --useOptions && node --import=module ./scripts/post-process-openapi.js",
    "fix-js": "yarn run lint-js --fix",
    "lint-js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "type": "module",
  "author": "",
  "dependencies": {
    "isomorphic-fetch": "^3.0.0",
    "next": "^14.0.2"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.15.21",
    "openapi-typescript-codegen": "^0.25.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
